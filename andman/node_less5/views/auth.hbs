{{#if error}}
<div><b>Неправильный логин/пароль</b></div>
{{/if}}

<form action="/auth" method="POST">
    <div>
        <input type="text" class="input-text" name="email" placeholder="Введите E-mail">
    </div>
    <div>
        <input type="password" class="input-text" name="password" placeholder="Введите пароль">
    </div>
    <div>
        <input class="btn" type="submit" value="Войти">
        <p><a href="/register">Регистрация</a></p>
    </div>
</form>