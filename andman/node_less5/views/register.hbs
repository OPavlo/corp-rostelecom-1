{{#if error}}
<div class="err err-{{error.err}}"><b>Ошибка регистрации:</b></div>
{{/if}}
<form action="/register" method="POST">
    <div>
        <input type="email" class="input-text" name="email" placeholder="Введите E-mail">
    </div>
    <div>
        <input type="text" class="input-text" name="firstName" placeholder="Введите имя">
    </div>
    <div>
        <input type="text" class="input-text" name="lastName" placeholder="Введите фамилию">
    </div>
    <div>
        <input type="password" class="input-text" name="password" placeholder="Введите пароль">
    </div>
    <div>
        <input type="password" class="input-text" name="repassword" placeholder="Повторите пароль">
    </div>
    <div>
        <input type="submit" class="btn" value="Зарегистрироваться">
        <p><a href="/auth">Форма входа на сайт</a></p>
    </div>
</form>