<h1>{{title}}</h1>

<form method="POST" action="/settings">
    <div class="form-group row">
        <label for="quantityNews" class="col-sm-3 col-form-label">Колличество новостей для Рубрики</label>
        <div class="col-sm-1">
            <input type="text" name="quantityNewsParam" class="form-control" id="quantityNews" value="{{quantityNewsParam}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="quantitySymbols" class="col-sm-3 col-form-label">Колличество сомволов в новости</label>
        <div class="col-sm-1">
            <input type="text" name="quantitySymbolsParam" class="form-control" id="quantitySymbols" value="{{quantitySymbolsParam}}">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

